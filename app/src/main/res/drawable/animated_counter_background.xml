                    android:strokeColor="?android:textColorPrimary"/>
            </group>
            <group
                android:name="ring_one"
                android:pivotX="12"
                android:pivotY="12"
                android:scaleX="0.4"
                android:scaleY="0.4">
                <path
                    android:name="ring"
                    android:pathData="M 13 2.05 L 13 5.08 C 16.39 5.57 19 8.47 19 12 C 19 12.9 18.82 13.75 18.5 14.54 L 21.12 16.07 C 21.68 14.83 22 13.45 22 12 C 22 6.82 18.05 2.55 13 2.05 M 12 19 C 10.144 19 8.363 18.262 7.05 16.95 C 5.738 15.637 5 13.856 5 12 C 5 8.47 7.61 5.57 11 5.08 L 11 2.05 C 5.94 2.55 2 6.81 2 12 C 2 14.651 3.054 17.196 4.929 19.071 C 6.804 20.946 9.349 22 12 22 C 15.3 22 18.23 20.39 20.05 17.91 L 17.45 16.38 C 16.17 18 14.21 19 12 19 Z"
