<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="path"
                android:pathData="M 12 1 L 9 9 L 1 12 L 9 15 L 12 23 L 15 15 L 23 12 L 15 9 L 12 1 Z"
                android:fillColor="@color/goodGray" />
        </vector>
    </aapt:attr>
    <target android:name="path">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="750"
                    android:valueFrom="M 12 1 L 9 9 L 1 12 L 9 15 L 12 23 L 15 15 L 23 12 L 15 9 L 12 1 Z M 12 12 L 12 12 L 12 12 L 12 12 L 12 12 L 12 12 L 12 12 L 12 12 L 12 12"
                    android:valueTo="M 12 1 L 9 9 L 1 12 L 9 15 L 12 23 L 15 15 L 23 12 L 15 9 L 12 1 Z M 12 6.7 L 13.45 10.55 L 17.3 12 L 13.45 13.45 L 12 17.3 L 10.55 13.45 L 6.7 12 L 10.55 10.55 L 12 6.7"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:duration="250"
                    android:valueFrom="0"
                    android:valueTo="1.5"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeAlpha"
                    android:duration="250"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeColor"
                    android:duration="250"
                    android:valueFrom="?colorAccent"
                    android:valueTo="@color/goodGray"
                    android:valueType="colorType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:startOffset="250"
                    android:duration="250"
                    android:valueFrom="1.5"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeAlpha"
                    android:startOffset="250"
                    android:duration="250"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeColor"
                    android:startOffset="250"
                    android:duration="250"
                    android:valueFrom="@color/goodGray"
                    android:valueTo="?colorAccent"
                    android:valueType="colorType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>