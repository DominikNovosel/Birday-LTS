            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="center"
                android:pivotX="12"
                android:pivotY="12"
                android:scaleX="0.2"
                android:scaleY="0.2">
